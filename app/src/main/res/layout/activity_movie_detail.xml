<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ctlMain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/ctlPosterDetail"
            android:layout_margin="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:background="@drawable/ic_splash_screen"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/imgPosterDetail"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ctlMovieInfo"
            app:layout_constraintTop_toBottomOf="@id/ctlPosterDetail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/movie_title"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:id="@+id/tvMovieTitleDetail"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/movie_title"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:id="@+id/tvSubTitle"
                app:layout_constraintTop_toBottomOf="@id/tvMovieTitleDetail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/movie_title"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:id="@+id/tvMovieInfo"
                app:layout_constraintTop_toBottomOf="@id/tvSubTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/movie_title"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="25sp"
                android:id="@+id/tvRelease"
                app:layout_constraintTop_toBottomOf="@id/tvMovieInfo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/movie_title"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="25sp"
                android:id="@+id/tvRating"
                app:layout_constraintTop_toBottomOf="@id/tvRelease"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/movie_title"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="25sp"
                android:id="@+id/tvRuntime"
                app:layout_constraintTop_toBottomOf="@id/tvRating"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/movie_title"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="25sp"
                android:id="@+id/tvBudget"
                app:layout_constraintTop_toBottomOf="@id/tvRuntime"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/movie_title"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="25sp"
                android:id="@+id/tvRevenue"
                app:layout_constraintTop_toBottomOf="@id/tvBudget"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/movie_title"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:id="@+id/tvOverview"
                app:layout_constraintTop_toBottomOf="@id/tvRevenue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/movie_title"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:id="@+id/tvTagLine"
                app:layout_constraintTop_toBottomOf="@id/tvOverview"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>